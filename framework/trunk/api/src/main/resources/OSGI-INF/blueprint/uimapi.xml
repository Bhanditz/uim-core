<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xmlns:bp="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:shell="http://karaf.apache.org/xmlns/shell/v1.0.0" xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.0.0">

    <cm:property-placeholder persistent-id="eu.europeana.uim">
        <cm:default-properties>
            <cm:property name="configuredResourceEngine" value="MemoryResourceEngine" />
            <cm:property name="configuredStorageEngine" value="MemoryStorageEngine" />
            <cm:property name="configuredLoggingEngine" value="MemoryLoggingEngine" />
        </cm:default-properties>
    </cm:property-placeholder>

    <service id="registry" ref="uimRegistry" interface="eu.europeana.uim.Registry" />

    <bean id="uimRegistry" class="eu.europeana.uim.UIMRegistry">
        <property name="configuredResourceEngine" value="${configuredResourceEngine}" />
        <property name="configuredStorageEngine" value="${configuredStorageEngine}" />
        <property name="configuredLoggingEngine" value="${configuredLoggingEngine}" />
    </bean>

    <reference id="orchestrator" interface="eu.europeana.uim.orchestration.Orchestrator" availability="optional">
        <reference-listener bind-method="setOrchestrator" unbind-method="unsetOrchestrator" ref="uimRegistry">
        </reference-listener>
    </reference>

    <reference-list interface="eu.europeana.uim.plugin.Plugin" availability="optional">
        <reference-listener bind-method="addPlugin" unbind-method="removePlugin" ref="uimRegistry">
        </reference-listener>
    </reference-list>

    <reference-list interface="eu.europeana.uim.storage.StorageEngine" availability="optional">
        <reference-listener bind-method="addStorageEngine" unbind-method="removeStorageEngine" ref="uimRegistry">
        </reference-listener>
    </reference-list>

    <reference-list interface="eu.europeana.uim.resource.ResourceEngine" availability="optional">
        <reference-listener bind-method="addResourceEngine" unbind-method="removeResourceEngine" ref="uimRegistry">
        </reference-listener>
    </reference-list>

    <reference-list interface="eu.europeana.uim.logging.LoggingEngine" availability="optional">
        <reference-listener bind-method="addLoggingEngine" unbind-method="removeLoggingEngine" ref="uimRegistry">
        </reference-listener>
    </reference-list>

    <reference-list interface="eu.europeana.uim.workflow.Workflow" availability="optional">
        <reference-listener bind-method="addWorkflow" unbind-method="removeWorkflow" ref="uimRegistry">
        </reference-listener>
    </reference-list>

    <reference-list interface="eu.europeana.uim.adapter.UimDatasetAdapter" availability="optional">
        <reference-listener bind-method="addUimDatasetAdapter" unbind-method="removeUimDatasetAdapter" ref="uimRegistry">
        </reference-listener>
    </reference-list>



    <bean id="loggingPlugin" class="eu.europeana.uim.util.LoggingIngestionPlugin">
    </bean>

    <service id="loggingPluginService" ref="loggingPlugin" interface="eu.europeana.uim.plugin.ingestion.IngestionPlugin" />



    <shell:command-bundle>
        <shell:command name="uim/info">
            <shell:action class="eu.europeana.uim.command.UIMInfo">
                <shell:argument ref="uimRegistry" />
            </shell:action>
        </shell:command>
        <shell:command name="uim/store">
            <shell:action class="eu.europeana.uim.command.UIMStore">
                <shell:argument ref="uimRegistry" />
            </shell:action>
        </shell:command>
        <shell:command name="uim/workflow">
            <shell:action class="eu.europeana.uim.command.UIMWorkflow">
                <shell:argument ref="uimRegistry" />
            </shell:action>
        </shell:command>
        <shell:command name="uim/exec">
            <shell:action class="eu.europeana.uim.command.UIMExecution">
                <shell:argument ref="uimRegistry" />
            </shell:action>
        </shell:command>
    </shell:command-bundle>

</blueprint>
