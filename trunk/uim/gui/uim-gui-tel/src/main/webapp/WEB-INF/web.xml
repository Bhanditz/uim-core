<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
        PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
    <servlet>
        <servlet-name>org.theeuropeanlibrary.uim.gui.gwt.IngestionCockpitOrchestrationService</servlet-name>
        <servlet-class>org.theeuropeanlibrary.uim.gui.gwt.server.OrchestrationServiceImpl</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>fileUploadService</servlet-name>
        <servlet-class>org.theeuropeanlibrary.uim.gui.gwt.server.FileUploadService</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>org.theeuropeanlibrary.uim.gui.gwt.IngestionCockpitOrchestrationService</servlet-name>
        <url-pattern>/IngestionCockpit/orchestrator</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>fileUploadService</servlet-name>
        <url-pattern>/IngestionCockpit/fileupload</url-pattern>
    </servlet-mapping>

    <!-- Default page to serve -->
    <welcome-file-list>
        <welcome-file>IngestionCockpit.html</welcome-file>
    </welcome-file-list>
</web-app>
