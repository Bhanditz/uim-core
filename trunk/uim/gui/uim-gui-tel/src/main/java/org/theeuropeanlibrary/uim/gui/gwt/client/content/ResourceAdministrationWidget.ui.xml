<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:c='urn:import:com.google.gwt.user.cellview.client' xmlns:s="urn:import:org.theeuropeanlibrary.uim.gui.gwt.client.content">

    <ui:style>
        .splitpanel {
        	height: 400px;
        	width: 100%;
            min-width: 500px;

			background: #d0e4f6 url(splitPanelThumb.png) center center no-repeat;
			cursor: col-resize;
        }
        
        .executionFormCell {
        	padding-top: 20px;
        }
        
        .decorator {
        	height: 400px;
        	width: 100%;
        	min-width: 500px;
        	border: 4px solid #d0e4f6;
        }
        
        .leftPanel {
            background-color: #FFF;
        }
        .centerPanel {
            background-color: #FFF;
        }        
        .rightPanel {
            background-color: #FFF;
        }
    </ui:style>

    <g:HTMLPanel>
        <table cellspacing='0' cellpadding='0' style='width:100%;'>
            <tr>
                <td valign='top'>
                    <g:DecoratorPanel addStyleNames='{style.decorator}' ui:field='decPanel'>
                                         <g:SplitLayoutPanel ui:field="splitPanel" addStyleNames="{style.splitpanel}">
                                            <g:west size="300">
                                                <g:LayoutPanel ui:field="leftPanel" addStyleNames="{style.leftPanel}">
<!--                                                     <c:CellBrowser ui:field="cellBrowser" /> -->
                                                </g:LayoutPanel>
                                            </g:west>
                                            <g:center>
                                                <g:LayoutPanel ui:field="centerPanel" addStyleNames="{style.centerPanel}">
<!--                                                     <c:CellTable ui:field="cellTable" /> -->
                                                </g:LayoutPanel>
                                            </g:center>
                                            <g:east size="400">
                                                <g:LayoutPanel ui:field="rightPanel" addStyleNames="{style.rightPanel}">
<!--                                                     <c:CellTable ui:field="cellTable" /> -->
                                                </g:LayoutPanel>
                                            </g:east>
                        </g:SplitLayoutPanel>
                    </g:DecoratorPanel>
                </td>
            </tr>
        </table>
    </g:HTMLPanel>
</ui:UiBinder>
