<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:c='urn:import:com.google.gwt.user.cellview.client'
  xmlns:s="urn:import:org.theeuropeanlibrary.uim.gui.gwt.client.content">

  <ui:style>
    .scrollable {
      height: 400px;
      width: 250px;
      border: 1px solid #ccc;
      text-align: left;
    }
    
    .executionFormCell {
      padding-left: 20px;
    }
    
    .tree {
      width: 500px;
      border: 1px solid #ccc;
    }
  </ui:style>

  <g:HTMLPanel>
    <table>
      <tr>
        <td
          valign='top'
          align='center'>
          <c:CellTree
            addStyleNames='{style.tree}'
            ui:field='cellTree' />
        </td>
        <td
          class='{style.executionFormCell}'
          valign='top'
          align='center'>
          <s:ExecutionForm
            ui:field='executionForm' />
          <br />
          <g:Button
            ui:field='startButton'>
          </g:Button>
        </td>
      </tr>
    </table>
  </g:HTMLPanel>
</ui:UiBinder>
