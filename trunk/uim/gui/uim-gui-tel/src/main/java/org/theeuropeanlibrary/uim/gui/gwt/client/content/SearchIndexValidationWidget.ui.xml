<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:c="urn:import:com.google.gwt.user.cellview.client">

    <ui:style>
        .splitpanel {
        	height: 500px;
        	width: 100%;
        	min-width: 500px;
        	border: 4px solid #d0e4f6;
        }
        
        .cellTable {
        	height: 470px;
        	text-align: left;
        	margin-bottom: 4px;
        	min-width: 500px;
        }
        
        .label {
        	width: 100px;
        	font-weight: bold;
        	margin-right: 4px;
        }
        
        .value {
        	width: 200px;
        	margin-right: 4px;
        }
        
        .leftPanel {
        	background-color: #FFF;
        }
        
        .rightPanel {
        	background-color: #FFF;
        }
    </ui:style>

    <g:HTMLPanel>
        <table cellspacing='0' cellpadding='0' style='width:100%;'>
            <tr>
                <td valign='top'>
                    <g:HorizontalPanel>
                        <g:ListBox ui:field='providerBox' addStyleNames='{style.value}' />
                        <g:ListBox ui:field='collectionBox' addStyleNames='{style.value}' />
                        <g:ListBox ui:field='fieldBox' addStyleNames='{style.value}' />
                        <g:TextBox addStyleNames='{style.value}' ui:field='queryBox' />
                        <g:Button ui:field='searchButton' />
                    </g:HorizontalPanel>
                </td>
            </tr>
            <tr>
                <td valign='top'>
                    <g:SplitLayoutPanel addStyleNames='{style.splitpanel}'>
                        <g:west size='200'>
                            <g:FlowPanel addStyleNames='{style.leftPanel}'>
                                <g:ScrollPanel>
                                    <g:FlowPanel ui:field='languageFacet'>
                                    </g:FlowPanel>
                                </g:ScrollPanel>
                            </g:FlowPanel>
                        </g:west>
                        <g:center>
                            <g:VerticalPanel addStyleNames='{style.rightPanel}' horizontalAlignment='center'>
                                <g:FlowPanel addStyleNames='{style.cellTable}'>
                                    <c:CellTable ui:field='cellTable' />
                                </g:FlowPanel>
                                <c:SimplePager ui:field='pager' />
                            </g:VerticalPanel>
                        </g:center>
                    </g:SplitLayoutPanel>
                </td>
            </tr>
        </table>
    </g:HTMLPanel>
</ui:UiBinder>

