<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:c="urn:import:com.google.gwt.user.cellview.client" xmlns:s="urn:import:org.theeuropeanlibrary.uim.gui.gwt.client.content">

    <ui:style>
        .splitpanel {
        	height: 500px;
        	width: 100%;
        	min-width: 500px;
        	border: 4px solid #d0e4f6;
        }
        
        .leftPanel {
        	background-color: #FFF;
        }
        
        .rightPanel {
        	background-color: #FFF;
        }
        
        .cellTable {
        	border-bottom: 1px solid #ccc;
        	text-align: left;
        	margin-bottom: 4px;
        }
        
        .executionStatusCell {
        	padding-left: 20px;
        }
    </ui:style>

    <g:HTMLPanel>
        <g:SplitLayoutPanel ui:field="splitPanel" addStyleNames="{style.splitpanel}">
            <g:west size="700">
                <g:LayoutPanel ui:field="leftPanel" addStyleNames="{style.leftPanel}">
                    <g:layer>
                        <c:CellTable addStyleNames='{style.cellTable}' pageSize='15' ui:field='cellTable' />
                    </g:layer>
                </g:LayoutPanel>
            </g:west>
            <g:center>
                <g:LayoutPanel ui:field="rightPanel" addStyleNames="{style.rightPanel}">
                    <g:layer>
                        <s:ExecutionStatus ui:field='executionStatus' />
                    </g:layer>
                </g:LayoutPanel>
            </g:center>
        </g:SplitLayoutPanel>
    </g:HTMLPanel>
</ui:UiBinder>
