<!DOCTYPE ui:UiBinder SYSTEM 'http://dl.google.com/gwt/DTD/xhtml.ent'>
<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
  ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateLocales='default'>

  <ui:style>
    .header {
      font-size: 110%;
      font-weight: bold;
      color: #555
    }
    
    .label {
      font-weight: bold;
    }
  </ui:style>

  <g:DecoratorPanel>
    <g:HTMLPanel>
      <table>
        <tr>
          <td
            colspan='2'
            align='center'
            class='{style.header}'>
            <ui:msg
              key='executionFormTitle'>Execution Form</ui:msg>
          </td>
        </tr>
        <tr>
          <td
            class='{style.label}'>
            <ui:msg
              key='executionFormName'>Name</ui:msg>
          </td>
          <td>
            <g:TextBox
              ui:field='nameBox' />
          </td>
        </tr>
        <tr>
          <td
            class='{style.label}'>
            <ui:msg
              key='executionFormWorkflow'>Workflow</ui:msg>
          </td>
          <td>
            <g:TextBox
              ui:field='workflowBox' />
          </td>
        </tr>
        <tr>
          <td
            class='{style.label}'>
            <ui:msg
              key='executionFormCategory'>:</ui:msg>
          </td>
          <td>
            <g:ListBox
              ui:field='categoryBox' />
          </td>
        </tr>
        <tr>
          <td
            class='{style.label}'>
            <ui:msg
              key='executionFormDataset'>Dataset:</ui:msg>
          </td>
          <td>
            <g:TextBox
              ui:field='datasetBox' />
          </td>
        </tr>
        <tr>
          <td
            class='{style.label}'>
            <ui:msg
              key='executionFormResources'>Resources:</ui:msg>
          </td>
          <td>
            <g:TextArea
              ui:field='resourcesBox' />
          </td>
        </tr>
        <tr>
          <td
            colspan='2'
            align='center'>
            <g:Button
              ui:field='commitButton'>
              <ui:msg
                key='executionFormCommitButton'>Commit</ui:msg>
            </g:Button>
              &nbsp;
            <g:Button
              ui:field='cancelButton'>
              <ui:msg
                key='executionFormCancelButton'>Cancel</ui:msg>
            </g:Button>
          </td>
        </tr>
      </table>
    </g:HTMLPanel>
  </g:DecoratorPanel>
</ui:UiBinder>
