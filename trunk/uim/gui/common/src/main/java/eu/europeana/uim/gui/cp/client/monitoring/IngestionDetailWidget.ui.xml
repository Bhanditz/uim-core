<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:c="urn:import:com.google.gwt.user.cellview.client" xmlns:s="urn:import:eu.europeana.uim.gui.cp.client.monitoring">

    <ui:style>
        .splitpanel {
        	height: 500px;
        	width: 99%;
        	border: 4px solid #d0e4f6;
        }
        
        .cellTable {
        	border-bottom: 1px solid #ccc;
        	text-align: left;
        	margin-bottom: 4px;
        	min-width: 500px;
        }
        
        .executionStatusCell {
        	padding-left: 20px;
        }
    </ui:style>

    <g:SplitLayoutPanel addStyleNames="{style.splitpanel}">
        <g:west size="700">
            <g:ScrollPanel>
                <c:CellTable addStyleNames='{style.cellTable}' pageSize='15' ui:field='cellTable' />
            </g:ScrollPanel>
        </g:west>
        <g:center>
            <s:IngestionStatus ui:field='executionStatus' />
        </g:center>
    </g:SplitLayoutPanel>
</ui:UiBinder>
