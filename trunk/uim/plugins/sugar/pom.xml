<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>eu.europeana</groupId>
        <artifactId>europeana-uim</artifactId>
        <version>1.3.0</version>
    </parent>

    <artifactId>europeana-uim-plugin-sugar</artifactId>
    <name>Unified Ingestion Manager: Sugar Integration Plugin</name>
    <packaging>bundle</packaging>
    <version>1.3.0-SNAPSHOT</version>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>2.1.0</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Import-Package>
                            eu.europeana.uim.api,
                            eu.europeana.uim.store,
                            eu.europeana.uim.sugarcrm,
                            eu.europeana.uim.sugarcrm.model,
                            eu.europeana.uim.repox,
                            org.theeuropeanlibrary.model.common.qualifier,
                            org.apache.commons.lang,
                            javax.servlet,
                            javax.servlet.http,
                            javax.naming.*,
                            javax.xml.*,
                            org.xml.sax.*,
                            org.w3c.dom,
                            !*
						</Import-Package>
                        <Export-Package>
                            eu.europeana.uim.sugar,
                            eu.europeana.uim.sugar.client,
                            eu.europeana.uim.sugar.utils,
                            eu.europeana.uim.sugar.tel
						</Export-Package>
                        <Embed-Dependency>axis,axis-saaj,wsdl4j,geronimo-jaxrpc_1.1_spec,commons-discovery,commons-logging</Embed-Dependency>
                    </instructions>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>axistools-maven-plugin</artifactId>
                <version>1.4</version>
                <executions>
                    <execution>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>wsdl2java</goal>
                        </goals>
                        <configuration>
                            <packageSpace>org.sugarcrm.soap</packageSpace>
                            <wsdlFile>src/main/wsdl/sugarcrm.wsdl</wsdlFile>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>cobertura-maven-plugin</artifactId>
                <configuration>
                    <instrumentation>
                        <ignores>
                            <ignore>org.sugarcrm.*</ignore>
                            <ignore>org.sugarcrm.soap.*</ignore>
                        </ignores>
                        <excludes>
                            <exclude>org/sugarcrm/**/*.class</exclude>
                        </excludes>
                    </instrumentation>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>europeana-uim-common</artifactId>
            <version>${project.parent.version}</version>
        </dependency>

        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>europeana-uim-api</artifactId>
            <version>${project.parent.version}</version>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>europeana-uim-model-common</artifactId>
            <version>${project.parent.version}</version>
        </dependency>

        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>europeana-uim-storage-memory</artifactId>
            <version>${project.parent.version}</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>servlet-api</artifactId>
        </dependency>

        <dependency>
            <groupId>org.apache.axis</groupId>
            <artifactId>axis</artifactId>
            <version>1.4</version>
        </dependency>

        <dependency>
            <groupId>org.apache.axis</groupId>
            <artifactId>axis-saaj</artifactId>
            <version>1.4</version>
        </dependency>

        <dependency>
            <groupId>wsdl4j</groupId>
            <artifactId>wsdl4j</artifactId>
            <version>1.6.2</version>
        </dependency>

        <dependency>
            <groupId>commons-discovery</groupId>
            <artifactId>commons-discovery</artifactId>
            <version>0.2</version>
        </dependency>

        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>1.1.1</version>
        </dependency>

        <dependency>
            <groupId>org.apache.geronimo.specs</groupId>
            <artifactId>geronimo-jaxrpc_1.1_spec</artifactId>
            <version>1.1</version>
        </dependency>


        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <scm>
        <connection>scm:svn:https://europeanalabs.eu/svn/uim/trunk/uim/plugins/sugar</connection>
        <developerConnection>scm:svn:https://europeanalabs.eu/svn/uim/trunk/uim/plugins/sugar</developerConnection>
    </scm>

    <profiles>
        <profile>
            <id>tel</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <build>
                <plugins>
                </plugins>
                <testResources>
                    <testResource>
                        <directory>src/main/resources</directory>
                    </testResource>
                    <testResource>
                        <directory>src/main/profiles/tel</directory>
                    </testResource>
                </testResources>
            </build>
        </profile>
    </profiles>
</project>
